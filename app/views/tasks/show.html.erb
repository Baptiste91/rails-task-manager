<h1><%= @task.title %></h1>
<div>
  <%= link_to "Edit", task_edit_path %>
</div>
<div>
<%= link_to "Delete", task_path(@task), method: :delete, data: { confirm: 'Are you sure?' } %>
</div>
<p><%= @task.details %></p>
<p><%= @task.completed ? "This task is completed" : "This task is not done yet" %></p>

<div>
  <%= link_to "Back to list", tasks_path %>
</div>
